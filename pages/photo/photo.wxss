}
.poster_img{
    width:60px;
    height:60px;
}
.author{
    font-size:14px;
    padding-top:10px;

}
.download{
    float:right;
    margin:20px 10px 0 0;
}
.text-font{
  margin-left: 8px;
  font-size: 10px;
  color: #666
}
.addAlbum{
  width: 100%;
